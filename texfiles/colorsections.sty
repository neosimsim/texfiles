\RequirePackage{xcolor}
\RequirePackage{tikz}

\definecolor{white}{RGB}{255,255,255}

\definecolor{darkgray}{HTML}{444444}
\definecolor{gray}{HTML}{4D4D4D}
\definecolor{lightgray}{HTML}{999999}

\definecolor{green}{HTML}{548235}
\definecolor{orange}{HTML}{FDA333}
\definecolor{purple}{HTML}{D3A4F9}
\definecolor{red}{HTML}{FB4485}
\definecolor{blue}{HTML}{6CE0F1}

\colorlet{themecolor}{green}
\colorlet{headercolor}{gray}
\colorlet{fillheader}{headercolor}
\colorlet{linkcolor}{darkgray}

% We want to colorize the first 3 letters of a section title.
\RequirePackage{xstring}
\RequirePackage{array}
%}
\newcommand{\sectioncolor}[1]{%
	% Color the first letters
	\begin{tabular*}{\textwidth}{@{}>{\raggedleft\arraybackslash}p{4cm}l@{}}
		\textcolor{themecolor}{\noindent\rule{\linewidth}{1.5pt}} & \textcolor{themecolor}{\StrLeft{#1}{3}}\StrGobbleLeft{#1}{3}
	\end{tabular*}
}

\renewcommand{\section}[1]{%
	\par\vspace{0.5cm}%
	{\LARGE\sectioncolor{#1}}
	\par\vspace{0cm}%
}

